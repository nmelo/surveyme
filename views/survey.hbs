<h1>Create new question:</h1>
<form action="/questions/create" method='post'>
  <input type="hidden" name="survey_id" value="{{survey_id}}"><br>
  <input type="text" name="title" placeholder="Title" value="Question Title"><br>
  <input type="text" name="choices" placeholder="Choices" value='[{"id": "1", "value": "Choice 1"}, {"id": "2", "value": "Choice 2"}]'><br><br>
  <button type="submit">Publicar</button>
</form>
<br><br>
<ul>
    {{#each questions }}
        <li>
            <a href='/questions/{{id}}'>{{title}}</a>
            <a href='/questions/{{id}}/destroy'>(Delete)</a><br>
        </li>
    {{/each}}
</ul>
