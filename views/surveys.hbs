<h1>All the Surveys:</h1>

<form action="/surveys/create" method='post' class="sm-col-6 border">
  <label for="title">Title</label>
  <input type="text" class="block col-12 mb1 field" name="title" placeholder="Title" value="Title">

  <label for="subtitle">Title</label>
  <input type="text" class="block col-12 mb1 field" name="subtitle" placeholder="Subtitle" value="Subtitle">

  <button type="submit" class="btn btn-primary">Create</button>
</form>

<br>

<div>
  <table class="table-light border">
    <thead>
    <tr>
      <th>Title</th> <th>Subtitle</th> <th></th>
    </tr>
    </thead>
    <tbody>
    {{#each surveys }}
    <tr>
      <td><a href='/surveys/{{id}}'>{{title}}</a></td>
      <td>{{subtitle}}</td>
      <td><a href='/surveys/{{id}}/destroy' class="btn btn-primary">Delete</a></td>
    </tr>
    {{/each}}
    </tbody>
  </table>
</div>
